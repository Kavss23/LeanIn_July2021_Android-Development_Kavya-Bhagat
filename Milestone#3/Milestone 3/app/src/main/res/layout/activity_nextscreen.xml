<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:background="@drawable/bg">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/menu" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/next" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Dashboard"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/wel"
        android:layout_width="600dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="600dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:text="Adverts Near You"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/food1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/white"

        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Food"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="45dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8 Offers "
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="35dp" />

        <ImageView
            android:layout_width="87dp"
            android:layout_height="72dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/food"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/travel1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/t1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="240dp"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/white"

        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/travel"
            android:scaleType="centerCrop"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Offers"
            android:textColor="@color/black"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="35dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/entertainment1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/food1"
        android:layout_marginLeft="70dp"
        android:backgroundTint="@android:color/white"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/entertainment"
            android:scaleType="centerCrop"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Entertainment"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2 Offers"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="35dp"
            android:textColor="@android:color/black" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/retail1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/entertainment1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="72dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/retail"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:text="Retail"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:text="0 Offers"

            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/sport1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/travel1"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="240dp"
        android:backgroundTint="@android:color/white"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/sport"
            android:scaleType="centerCrop"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Sport" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@+id/sport1"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="240dp"
        android:backgroundTint="@android:color/white"
        >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:background="@drawable/add"
            android:layout_marginLeft="25dp"
            android:scaleType="centerInside"
            android:backgroundTint="@android:color/darker_gray"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:text="Add Widget" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="80dp"
            android:text="5 Others"
            android:textColor="@android:color/black" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Name"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_below="@id/retail1"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_margin="20dp"
        android:text="Your Name"
        android:textStyle="bold"
        android:textColor="@android:color/black"
       android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="30dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/navi"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"

        />










</RelativeLayout>